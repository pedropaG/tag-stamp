<%- if controller_name != 'sessions' %>
  <%= link_to t(:log_in, scope: :devise), new_session_path(resource_name) %><br />
<% end -%>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <%= link_to t(:sign_up, scope: :devise), new_registration_path(resource_name) %><br />
<% end -%>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <%= link_to t(:forgot_your_password, scope: :devise), new_password_path(resource_name) %><br />
<% end -%>
