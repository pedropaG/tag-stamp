<div class="tags_list container">
	<% record_number = 0 %>
	<% cell = 0 %>
	<% (0..total_pages(@records)).each do |page| %>
		<div class="page_box">
			<% (0..current_user.rows).each do |row| %>
				<div class="row_box">
					<% (0..current_user.columns).each do |columns| %>
						<% cell += 1 %>
						<% record = order_by_cell(cell, page, record_number, @records) %>
						<% record_number +=1 if record %>
						<%= render "tag_box", record: record %>
					<% end %>
				</div>
			<% end %>
			<footer></footer>
		</div>
	<% end %>
	<hr>
	<div class="row">
		<%= link_to t(:print), root_path, class: "btn btn-success" %>
		<%= link_to t(:return), root_path, class: "btn btn-danger" %>
	</div>
</div>
