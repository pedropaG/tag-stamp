<div class="container header_order_table">
	<%= link_to t(:pendings), root_path(not_all: false), class: "link #{'active' if !session[:all]}" %>
	<%= link_to t(:all), root_path(all: true), class: "link #{'active' if session[:all]}" %>
</div>
<div class="content_box">	
	<% if @records.any? %>
		<div class="order_table">
			<div class="orders_header">
				<span class="checkbox_all mark_all"><%= check_box_tag t(:mark_all) %></span>
				<span><%= Order.human_attribute_name(:number) %></span>
				<span><%= Order.human_attribute_name(:full_name) %></span>
				<span><%= Order.human_attribute_name(:street) %></span>
				<span><%= Order.human_attribute_name(:street2) %></span>
				<span><%= Order.human_attribute_name(:city) %></span>
				<span><%= Order.human_attribute_name(:state) %></span>
				<span><%= Order.human_attribute_name(:zip_number) %></span>
				<span><%= Order.human_attribute_name(:country) %></span>
			</div>
			<% @records.each do |record| %>
				<%= render 'record_list', record: record %>
			<% end %>
			</table>
			<%= form_tag preview_tags_path, class: "preview_form" do %>	
				<% @records.each do |record| %>
					<%= content_tag :div, check_box_tag("order[#{record.id}]"), class: "checkbox hidden" %>
				<% end %>
				
				<%= submit_tag t(:preview), class: "btn btn-success" %>
			<% end %>
		</table>
	<% end %>
</div>

